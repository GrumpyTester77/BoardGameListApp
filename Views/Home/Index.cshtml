@model IEnumerable<BoardGameListApp.Models.BoardGame>
@{
    ViewBag.Title = "Board Game App";
}

<div class="jumbotron">
    <h1>Board Game List</h1>
    <p class="lead">This is a board game application to list all owned board games</p>

</div>
<div>
    <p class="lead">Currently owned Boardgames</p>

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BoardGameType.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BoardGameType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

        </tr>

    }

</table>
<a href="javascript:window.print()">Print</a>